{
    "env": {
        "browser": true,
        "jest": true,
        "es6": true,
        "node": true
    },
    "parser": "babel-eslint",
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "plugin:jsx-a11y/recommended"
    ],
    "rules": {
        "semi": "error",
        "eol-last": "error",
        "no-unused-vars": "warn",
        "react/jsx-filename-extension": "error",
        "quotes": [
            2,
            "single",
            {
                "avoidEscape": true
            }
        ]
    }
}